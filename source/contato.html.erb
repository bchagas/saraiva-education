<section id="message">
  <div class="content">
    <header>
      <h2>Se preferir envie-nos uma mensagem</h2>
    </header>

    <% form_tag "/enviar", method: "post" do %>
      <% field_set_tag class: "inputs" do %>
        <ol>
          <li><%= text_field_tag :name, placeholder: "Nome" %><li>
          <li><%= text_field_tag :email, placeholder: "Email", type: "email" %><li>
          <li><%= select_tag :subject, options: ["Selecione o assunto", "Reclamação", "Sugestão"] %><li>
          <li><%= text_field_tag :ddd, placeholder: "DDD", type: "tel" %><li>
          <li><%= text_field_tag :phone, placeholder: "Telefone", type: "tel" %><li>
          <li><%= text_area_tag :phone, placeholder: "Digite sua mensagem..." %><li>
        </ol>
      <% end %>

      <% field_set_tag class: "actions" do %>
        <%= submit_tag "Enviar" %>
      <% end %>
    <% end %>

    <div class="map">
      <iframe src="https://maps.google.com.br/maps/ms?msid=200031083761718300220.0004cccdacfb4ad542c90&amp;msa=0&amp;ie=UTF8&amp;t=m&amp;ll=-14.179186,-47.900391&amp;spn=32.804373,51.503906&amp;z=4&amp;output=embed" width="525" height="385" frameborder="0" marginwidth="0" marginheight="0" scrolling="no"></iframe>
    </div>
  </div>
</section>
